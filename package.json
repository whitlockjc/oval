{
  "name": "oval",
  "description": "oval: CLI for validating OpenAPI specification (OAS) documents",
  "version": "0.0.1",
  "author": "Jeremy Whitlock @whitlockjc",
  "bin": {
    "oval": "./bin/oval"
  },
  "bugs": "https://github.com/whitlockjc/oval/issues",
  "dependencies": {
    "@oclif/command": "^1.4.35",
    "@oclif/config": "^1.6.33",
    "@oclif/plugin-help": "^2.0.5",
    "chalk": "^2.4.1",
    "json-refs": "^3.0.6",
    "sway": "^2.0.0"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.15.4",
    "chai": "^4.1.2",
    "chai-string": "^1.4.0",
    "eslint": "^4.19.1",
    "eslint-config-oclif": "^1.5.1",
    "globby": "^8.0.1",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "tmp": "0.0.33"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/bin",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json",
    "/lib",
    "/LICENSE"
  ],
  "homepage": "https://github.com/whitlockjc/oval",
  "keywords": [
    "cli",
    "oai",
    "oas",
    "oclif",
    "openapi"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "oval",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "repository": "whitlockjc/oval",
  "scripts": {
    "clean": "rm -fR .nyc_output coverage.lcov",
    "postpack": "rm -f oclif.manifest.json npm-shrinkwrap.json",
    "pretest": "eslint .",
    "prepack": "oclif-dev manifest && oclif-dev readme && npm shrinkwrap",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "test": "nyc mocha --forbid-only \"test/**/*.test.js\"",
    "version": "oclif-dev readme && git add README.md"
  }
}
